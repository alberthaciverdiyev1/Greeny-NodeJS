<%- include('../layouts/partials/header') %>
    <br>
    <br>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-5">
            <form class="user-form" action="/Blogs/add" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" data-role="title" class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <textarea class="form-control" data-role="context" rows="4" cols="50" placeholder="Context"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" data-role="image"></input>
                </div>
                <div class="form-button">
                    <button type="button" data-role="add-blog">Add blog</button>
                </div>
            </form>
        </div>
        <div class="col-3"></div>

    </div>


    <%- include('../layouts/partials/footer') %>